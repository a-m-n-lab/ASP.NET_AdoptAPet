@page "/{id:int?}"
@model Naros_Ana_Maria_AdoptAPet.Pages.Pets.IndexModel

@{
    ViewData["Title"] = "Pets";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].AvailableDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].Location.LocationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pet[0].PetCategories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PetD.Pets) {
        string selectedRow = "";
        if (item.ID == Model.PetID)
        {
        selectedRow = "table-success";
        }
        <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.LocationName)
            </td>
            <td>
                @{
                    foreach (var category in item.PetCategories)
                    {
                        @category.Category.ID @: @category.Category.CategoryName <br />
                    }
                }
            </td>

            <td>
            </td>
        </tr>
}
    </tbody>
</table>
